{% extends "TemploBundle::base.html.twig" %}

{% block main %}

    <div class="container">
        <div class="row head">
            <div class="col-md-12">
                <h1>{{ 'security.login.page_title'|trans({}, 'FOSUserBundle') }}</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 col-md-offset-1">                
                <form action="{{ path("fos_user_security_check") }}" method="post" class="security-form" role="form" novalidate>

                    {% if error %}
                        <div class="errors">{{ error|trans({}, 'FOSUserBundle') }}</div>
                    {% endif %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        <input id="username" class="form-control input-lg" type="text" name="_username" value="{{ last_username }}" required="required" placeholder=" {{ 'security.login.username'|trans({}, 'FOSUserBundle') }}" />
                    </div>
                    <br>
                    <div class="input-group">                       
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                        <input id="password" class="form-control input-lg" type="password" name="_password" required="required"  placeholder=" {{ 'security.login.password'|trans({}, 'FOSUserBundle') }}"/>
                    </div>
                    <div class="form-group">
                         <label class="password" for="password">                          
                            <a href="{{ path('fos_user_resetting_request') }}" class="forgot-password">
                                {{ 'security.forgot_password'|trans({}, 'FOSUserBundle') }}
                            </a>
                        </label>
                        <button type="submit" class="btn btn-primary">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
                        <div class="checkbox input-group">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-2 divider">
                &nbsp;
            </div>
          
        </div>
    </div>
    
{% endblock %}