{% extends 'TemploBundle::base.html.twig' %}

{% block main %}
<section class="row advertisement-create">
    <header>                    
        <h1><img src="{{ asset('assets/img/home_32.png') }}"><span>&nbsp;{% block section_title '' %}</span></h1>
            {% include 'TemploBundle:Form:formflow_stepList.html.twig' %}
    </header>   
 
    {% block form %}
    {# form(form, {'action':action, 'method':'POST','attr':{'novalidate':'novalidate'}}) #}
    <form novalidate action="{% block form_action '' %}" method="post" {{ form_enctype(form) }} class="form-horizontal">
         <fieldset>               
             {{ form_rest(form) }}
             <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                   {% set renderBackButton = flow.getCurrentStepNumber() in (flow.getFirstStepNumber() + 1) .. flow.getLastStepNumber() %}
                   <div class="form-actions form-flow-actions">               
                        <button type="submit" name="{{ flow.getFormTransitionKey() }}" value="back" class="btn btn-primary{% if not renderBackButton %} disabled{% endif %}" formnovalidate="formnovalidate"{% if not renderBackButton %} disabled="disabled"{% endif %}>
                            <span class="fa fa-chevron-circle-left">&nbsp;Atr√°s</span>                        
                        </button> 
                        <button type="submit" class="btn btn-primary">
                            {%- if flow.getCurrentStepNumber() < flow.getStepCount() -%}
                                 <span class="fa fa-chevron-circle-right">&nbsp;Siguiente</span>
                            {%- else -%}
                                <span class="fa fa-save">&nbsp;Terminar</span>
                            {%- endif -%}
                        </button>
                        <button type="submit" name="{{ flow.getFormTransitionKey() }}" value="reset" class="btn btn-primary" formnovalidate="formnovalidate">
                             <span class="fa fa-refresh">&nbsp;Reiniciar</span>
                        </button>               
                    </div> 
                </div>
             </div>
         </fieldset>           
    </form>
    {% endblock %}
    
</section>    
{% endblock %}
